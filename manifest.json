{
  "manifest_version": 3,
  "name": "YouTube Recommendation Blocker",
  "version": "0.1.0",
  "description": "Removes Recommendations from YouTube homepage and sidebar",

  "content_scripts": [
    {
      "matches": [ "*://*.youtube.com/*" ],
      "js": [ "script.js" ]
    }
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "action": {
    //"default_popup": "popup.html",
    "default_icon": "icon16.png"
  }
}